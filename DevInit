initdir=$(pwd)

mkdir -p patch_res/hammerhead_drivers
cd patch_res/hammerhead_drivers

wget https://dl.google.com/dl/android/aosp/broadcom-hammerhead-mob30h-c636ab9a.tgz
wget https://dl.google.com/dl/android/aosp/lge-hammerhead-mob30h-d9f70cab.tgz
wget https://dl.google.com/dl/android/aosp/qcom-hammerhead-mob30h-eb420a49.tgz

tar xvf broadcom-hammerhead-mob30h-c636ab9a.tgz
tar xvf lge-hammerhead-mob30h-d9f70cab.tgz
tar xvf qcom-hammerhead-mob30h-eb420a49.tgz

./extract-broadcom-hammerhead.sh
./extract-lge-hammerhead.sh
./extract-qcom-hammerhead.sh

rm broadcom-hammerhead-mob30h-c636ab9a.tgz
rm lge-hammerhead-mob30h-d9f70cab.tgz
rm qcom-hammerhead-mob30h-eb420a49.tgz

rm extract-broadcom-hammerhead.sh
rm extract-lge-hammerhead.sh
rm extract-qcom-hammerhead.sh

cd $initdir
